<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adnanshakeel.loginregister.LoginActivity">

   <EditText
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:hint="Enter Your Email"
       android:inputType="text"
       android:id="@+id/txtEmail"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       />
<EditText
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="Enter Your Passward"
    android:inputType="textPassword"
    android:id="@+id/txtPassward"
    android:layout_below="@id/txtEmail"
    android:layout_centerHorizontal="true"
    />

    <TextView
        android:id="@+id/txtViewForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPassward"
        android:layout_alignStart="@+id/txtPassward"
        android:layout_below="@+id/txtPassward"
        android:text="Forgot Passward"
        android:textSize="15dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/txtViewForgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="LOGIN"
        android:textSize="25dp"
        android:background="#FF4052B5"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#FF4052B5"
        android:text="Register"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnLogin"
        android:layout_alignRight="@+id/btnLogin"
        android:layout_below="@+id/txtViewForgot"
        android:layout_marginTop="15dp"
        android:textColor="#B30"
        android:text=""
        android:id="@+id/txtInvalid"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/mainicon" />

</RelativeLayout>

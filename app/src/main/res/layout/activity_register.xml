<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adnanshakeel.loginregister.RegisterActivity">

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:hint="First Name" />

    <EditText
        android:id="@+id/txtLastName"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtFirstName"
        android:layout_marginTop="19dp"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/txtEmailreg"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLastName"
        android:layout_marginTop="19dp"
        android:hint="Enter Email" />


    <EditText
        android:id="@+id/txtPasswardreg"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtEmailreg"
        android:layout_marginTop="19dp"
        android:hint="Enter Passward"

        />


    <EditText
        android:id="@+id/txtConfirmPasswardreg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtPasswardreg"
        android:layout_marginTop="19dp"
        android:hint="Confirm Passward" />


    <Button
        android:id="@+id/btnCancel"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_alignEnd="@+id/txtPasswardreg"
        android:layout_alignRight="@+id/txtPasswardreg"
        android:layout_below="@+id/txtConfirmPasswardreg"
        android:layout_marginTop="52dp"
        android:background="#FF4052B5"
        android:text="CANCEL"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="#FF4052B5"
        android:text="CONFIRM"
        android:textSize="20dp" />



</RelativeLayout>
